<Window x:Class="VMSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VMSharp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <DockPanel LastChildFill="True" Background="#FF3E3E3E">
            <StackPanel DockPanel.Dock="Left" Width="400">
                <TextBlock x:Name="vmview" DockPanel.Dock="Top" Margin="15,15,15,15" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="220" FontSize="12" FontFamily="Consolas" Foreground="#FFA5A5A5"/>
                <DockPanel Margin="20,0,40,0">
                    <Label Content="Step Delay:"/>
                    <Label x:Name="spd" Content="" DockPanel.Dock="Right"/>
                    <Slider Maximum="1000"  SmallChange="1" LargeChange="100" Value="10" ValueChanged="Slider_ValueChanged" />
                </DockPanel>
                
                <WrapPanel DockPanel.Dock="Bottom" Height="150" VerticalAlignment="Bottom">
                    <Button Content="CodeToVM" Height="50" Width="150" Margin="20,10,10,10" Click="Button_Click" FontSize="16"/>
                    <Button Content="Step" Height="50" Width="150" Margin="10" Click="Button_Click_1" FontSize="16"/>
                    <Button Content="Run" Height="50" Width="150" Margin="20,10,10,10" Click="Button_Click_2" FontSize="16"/>
                    <Button Content="Help" Height="50" Width="150" Margin="10" FontSize="16"/>
                </WrapPanel>
            </StackPanel>
            <DockPanel DockPanel.Dock="Right" Width="auto" LastChildFill="True">
                
                <ScrollViewer DockPanel.Dock="Top" Margin="10" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Height="auto" >
                    <DockPanel >
                        <TextBlock x:Name="linnum" TextAlignment="Right" Width="30" Background="Gainsboro" FontSize="16" Foreground="#FF424242" FontFamily="Consolas"/>
                        <TextBox x:Name="input" TextWrapping="Wrap" Text="read 10" Width="200" Height="auto" AcceptsReturn="True" TextChanged="input_TextChanged" Background="#FFCECECE" FontSize="16" Foreground="#FF156FFF" ScrollViewer.CanContentScroll="True" FontFamily="Consolas"/>
                        <TextBox DockPanel.Dock="Right" x:Name="mcode" TextWrapping="Wrap" Text="1010" Width="auto" Height="auto" AcceptsReturn="True" Background="#FFCECECE" FontSize="16" Foreground="#FF008025" ScrollViewer.CanContentScroll="True" FontFamily="Consolas"/>
                    </DockPanel>
                </ScrollViewer>
            </DockPanel>
        </DockPanel>

    </Grid>
</Window>
